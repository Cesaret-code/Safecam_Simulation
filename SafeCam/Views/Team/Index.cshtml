@using SafeCam.Models


@model List<Team>
@{
    int count = 0;
}


<div class="container">

    <h1>Slider</h1>
    <a asp-action="Create" class="btn btn-submit">Create</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">FullName</th>
                <th scope="col">Designation</th>
                <th scope="col">ImgUrl</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Fullname</td>
                    <td>@item.Designation</td>
                    <td>

                        <img src="~/img//@item.ImgUrl" />
                    </td>

                </tr>
            }

        </tbody>
    </table>

</div>